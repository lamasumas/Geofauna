<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment2">
    <fragment
        android:id="@+id/mainFragment2"
        android:name="com.example.myapplication.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment2_to_avistamiento2"
            app:destination="@id/avistamiento2" />
    </fragment>
    <fragment
        android:id="@+id/avistamiento2"
        android:name="com.example.myapplication.fragments.AvistamientoFragment"
        android:label="fragment_avistamiento"
        tools:layout="@layout/fragment_avistamiento" >
        <action
            android:id="@+id/action_avistamiento2_to_mainFragment2"
            app:destination="@id/mainFragment2"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <action
            android:id="@+id/action_avistamiento2_to_databaseViewFragment"
            app:destination="@id/databaseViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/databaseViewFragment"
        android:name="com.example.myapplication.fragments.DatabaseViewFragment"
        android:label="fragment_database_view"
        tools:layout="@layout/fragment_database_view" >
        <action
            android:id="@+id/action_databaseViewFragment_to_avistamiento2"
            app:destination="@id/avistamiento2" />
        <argument android:name="idAnimal" />
    </fragment>
</navigation>