<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/full_screen_dialog"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorPrimaryPaleta">



    <com.google.android.material.textfield.TextInputLayout
        style="@style/myEditLayout"
        app:startIconDrawable="@drawable/pressure_icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPressureSeaLevel"
            style="@style/myEditText"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/etPressureSeaLevel"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnChangePressure"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/btnChangePressure"/>

</LinearLayout>